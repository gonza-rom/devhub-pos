---
import { Icon } from 'astro-icon/components';

const WHATSAPP_URL = 'https://wa.me/543834946767?text=Hola%2C%20me%20interesa%20conocer%20m%C3%A1s%20sobre%20DevHub%20POS';
const EMAIL = 'devhubpos@gmail.com';

const links = [
  { href: '/privacidad', label: 'Privacidad' },
  { href: '/terminos',   label: 'Términos' },
];
---

<footer class="relative z-10 border-t border-white/[0.07]">

  <!-- Contact bar -->
  <div class="flex flex-col sm:flex-row items-center justify-center gap-4 sm:gap-8
              px-[5vw] py-8 border-b border-white/[0.07]">
    <a href={`mailto:${EMAIL}`}
       class="inline-flex items-center gap-2.5 px-5 py-2.5 rounded-lg
              border border-white/[0.07] text-gray-400 hover:text-white hover:border-white/20
              transition-all duration-200 no-underline text-sm">
      <Icon name="lucide:mail" class="w-4 h-4 text-red shrink-0" />
      {EMAIL}
    </a>

    <a href={WHATSAPP_URL}
       target="_blank" rel="noopener noreferrer"
       class="inline-flex items-center gap-2.5 px-5 py-2.5 rounded-lg font-medium text-sm
              text-white transition-all duration-200 no-underline hover:-translate-y-px"
       style="background: #25D366; box-shadow: 0 0 0 0 rgba(37,211,102,0);"
       onmouseover="this.style.boxShadow='0 6px 20px rgba(37,211,102,0.3)'"
       onmouseout="this.style.boxShadow='0 0 0 0 rgba(37,211,102,0)'">
      <!-- WhatsApp SVG icon -->
      <svg class="w-4 h-4 shrink-0" viewBox="0 0 24 24" fill="currentColor">
        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
      </svg>
      Escribinos por WhatsApp
    </a>
  </div>

  <!-- Bottom bar -->
  <div class="flex flex-wrap items-center justify-between gap-4 px-[5vw] py-8">
    <a href="/#" class="no-underline">
      <img src="/devhub-pos-logo-bg.png" alt="DevHub POS"
           class="h-8 w-auto opacity-70 hover:opacity-100 transition-opacity duration-200" />
    </a>

    <p class="text-xs text-gray-600">
      © {new Date().getFullYear()} DevHub POS. Todos los derechos reservados.
    </p>

    <nav class="flex gap-6">
      {links.map((l) => (
        <a href={l.href}
           class="text-xs text-gray-500 hover:text-white transition-colors duration-200 no-underline">
          {l.label}
        </a>
      ))}
    </nav>
  </div>

</footer>